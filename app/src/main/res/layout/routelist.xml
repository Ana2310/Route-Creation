<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:weightSum="3"
    android:id="@+id/linear"
    android:layout_marginTop="10dp"
    android:background="@drawable/recycle">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_height="50dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/taxi"></de.hdodenhof.circleimageview.CircleImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:id="@+id/name"
            android:layout_marginLeft="10dp"
            android:text="Travel"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/distance"
            android:layout_marginLeft="10dp"
            android:textColor="#83000000"
            android:text="March 07"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:weightSum="3"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:id="@+id/time"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="$ 400"></TextView>




    </LinearLayout>

</LinearLayout>
